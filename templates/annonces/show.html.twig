{% extends 'base.html.twig' %}

{% block title %}Produit détail
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<h1 style="font-size:25px">Détail du produit</h1>

		<table class="table">
			<tbody>

				<tr>
					<th>Titre</th>
					<td>{{ annonce.title }}</td>
				</tr>
				<tr>
					<th>Description Sommaire</th>
					<td>{{ annonce.descriptionsimple }}</td>
				</tr>


				<tr>
					<th>détail</th>
					<td>{{ annonce.content |raw}}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ annonce.price }}</td>
				</tr>
			</tbody>
		</table>

		<div class="container mt-2">
			{% for image in annonce.images %}

				<img src="{{ asset('/uploads/' ~ image.name) }}" alt="photo_produit" width="300">

			</div>


		{% endfor %}
		<div class="container mt-2">


			{% if app.user %}
				{% if app.user.roles[0] is same as "ROLE_ADMIN" %}
					<a class="btn btn-warning" href="{{ path('annonces_edit', {'id': annonce.id}) }}">Modifier</a>

					{{ include('annonces/_delete_form.html.twig') }}
				{% endif %}
			{% endif %}
			<a class="btn btn-primary mt-5" href="{{ path('annonces_index') }}">retour a la liste des produits</a>
		</div>
	</div>

{% endblock %}
